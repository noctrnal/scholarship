<div class="main">
  <h1>Applicant Submissions</h1>

  <div class="submissions">
    <p id="notice"><%= notice %></p>

    <p>Below is the list of applicant submissions that have been marked as complete by NAJA.</p>

    <p>Please select each one to complete the committee grading.</p>

    <table>
      <thead>
        <tr>
          <th>Applicant</th>
          <th>Submission</th>
          <th>Transcripts</th>
          <th>Recommendations</th>
        </tr>
      </thead>
      <tbody>
        <% @submissions.each do |submission| %>
          <tr>
            <td><%= name(submission) %></td>
            <td><%= link_to 'Submission', submission %></td>
            <td>
              <table class="no-bottom-border">
                <% submission.institutions.each do |institution| %>
                  <td><%= link_to institution.name, institution.transcript.upload.url %></td>
                <% end %>
              </table>
            </td>
            <td>
              <table class="no-bottom-border">
                <% submission.recommendations.each do |recommendation| %>
                  <td><%= link_to recommendation.name, recommendation %></td>
                <% end %>
              </table>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

