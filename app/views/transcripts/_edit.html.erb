<%= form_for @transcript do |form| %>
  <% if transcript.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(transcript.errors.count, "error") %> prohibited this transcript from being saved:</h2>

      <ul>
        <% transcript.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <p><span>Applicant</span>: <%= @submission.name %></p>
    <p><span>Proposed field of study</span>: <%= @submission.field.name %></p>
    <p>The applicant has been asked to secure official transcripts from previously attended institutions.</p>
    <p>Please use the form below to upload a PDF of the applicant's official trascript.</p>
    <%= form.file_field :upload %>
    <% if @transcript.upload.present? %>
      <p><%= link_to 'View transcript', @transcript.upload.url %></p>
    <% end %>
    <input type="submit" name="commit" value="Submit transcript" data-disable-with="Submit transcript">
  </div>
<% end %>

